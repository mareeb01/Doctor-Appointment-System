<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Patient.top_doctors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="21dp"
                android:onClick="btn_home"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back_arrow">


            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/joannab"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:text="Top Doctors"
                android:textSize="25dp">

            </TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:textColor="#2E76FF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="All"
                android:textSize="15dp"
                android:background="@drawable/btn_curve_white"
                tools:ignore="VisualLintBounds">


            </TextView>

            <TextView
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:textColor="#2E76FF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Brain"
                android:textSize="15dp"
                android:background="@drawable/btn_curve_white"
                tools:ignore="VisualLintBounds">


            </TextView>

            <TextView
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:textColor="#2E76FF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Eye"
                android:textSize="17dp"
                android:background="@drawable/btn_curve_white"
                tools:ignore="VisualLintBounds">


            </TextView>

            <TextView
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:textColor="#2E76FF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Dentist"
                android:textSize="15dp"
                android:background="@drawable/btn_curve_white"
                tools:ignore="VisualLintBounds">


            </TextView>

            <TextView
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:textColor="#2E76FF"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Brain"
                android:textSize="15dp"
                android:background="@drawable/btn_curve_white"
                tools:ignore="VisualLintBounds">


            </TextView>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:onClick="doc_profile"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ffffff">


                    <ImageView
                        android:layout_width="94dp"
                        android:layout_height="91dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/person" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="120dp"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:fontFamily="@font/joannab"
                        android:text="Doc Name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_marginLeft="120dp"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:fontFamily="@font/jonalight"
                        android:text="Doc dept / qualification" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="120dp"
                        android:onClick="doc_profile"
                        android:background="@drawable/btn_curves"
                        android:hint="Book"
                        android:fontFamily="@font/joannab"
                        android:textColorHint="#ffffff"
                        android:textSize="18dp">

                    </Button>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ffffff">


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="120dp"
                    android:elevation="10dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ffffff">


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#ffffff">


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/home"
                android:onClick="btn_home"
                android:background="@drawable/hii_top">


            </ImageView>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:layout_marginLeft="62dp"
                android:src="@drawable/appointment"
                android:background="@drawable/hii_top">


            </ImageView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/option"
                android:background="@drawable/hii_top">


            </ImageView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/profile"
                android:background="@drawable/hii_top">


            </ImageView>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>