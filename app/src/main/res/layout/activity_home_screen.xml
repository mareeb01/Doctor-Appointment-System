<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.home_screen"
    android:orientation="vertical"
    android:background="#ffffff">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/joannab"
                    android:layout_marginLeft="40dp"
                    android:textColor="#000000"
                    android:text="Home"
                    android:textSize="26dp">

                </TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SearchView
                    android:layout_width="340dp"
                    android:layout_height="45dp"
                    android:iconifiedByDefault="false"
                    android:paddingStart="10dp"
                    android:queryHint="Search..."
                    android:searchHintIcon="@drawable/img"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    app:iconifiedByDefault="false"
                    android:background="@drawable/search_input"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The greatest wealth is health."
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp">


                </TextView>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="316dp"
                            android:layout_height="191dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="16dp"
                            app:srcCompat="@drawable/pic2">

                        </ImageView>

                        <ImageView
                            android:layout_width="316dp"
                            android:layout_height="191dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="16dp"
                            app:srcCompat="@drawable/pic7">

                        </ImageView>



                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/joannab"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:text="Top Doctor"
                        android:textSize="22dp">

                    </TextView>


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/doc_recycler"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/hii_top"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="btn_home"
                    android:src="@drawable/home">

                </ImageView>

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="btn_appointment"
                    android:src="@drawable/appointment">

                </ImageView>

                <ImageView
                    android:id="@+id/doc_btn"
                    android:layout_width="52dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/option">

                </ImageView>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="btn_profile"
                    android:src="@drawable/profile">

                </ImageView>

            </LinearLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>



</LinearLayout>


