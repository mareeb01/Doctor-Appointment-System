<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.book_appointment"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/joannab"
                android:text="Book Appointment"
                android:textColor="#000000"
                android:textSize="25dp">

            </TextView>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/joannab"
            android:text="Patient Name:"
            android:textColor="#000000"
            android:textSize="18dp">


        </TextView>

        <EditText
            android:id="@+id/pname"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:paddingStart="10dp"
            android:background="@drawable/et_input"
            android:hint="   Full Name"
            android:textColorHint="#BAC7D4"
            android:textSize="14dp">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/joannab"
            android:text="Patient Age"
            android:textColor="#000000"
            android:textSize="18dp">


        </TextView>

        <EditText
            android:id="@+id/page"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:background="@drawable/et_input"
            android:digits="012"
            android:hint="   Age"
            android:inputType="number"
            android:textColorHint="#BAC7D4"
            android:textSize="14dp">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/joannab"
            android:text="Phone #"
            android:textColor="#000000"
            android:textSize="18dp">


        </TextView>

        <EditText
            android:id="@+id/pphone"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_input"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:digits="01234567891"
            android:hint="   03000000000"
            android:inputType="phone"
            android:textColorHint="#BAC7D4"
            android:textSize="14dp">

        </EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/joannab"
            android:text="Gender"
            android:textColor="#000000"
            android:textSize="18dp">


        </TextView>

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:buttonTint="#000000"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:textColor="#000000"
                android:text="Female"
                android:textSize="16dp" />

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/joannab"
            android:text="select appointment Day"
            android:textColor="#000000"
            android:textSize="18dp">


        </TextView>

        <TextView
            android:id="@+id/pdate"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_input"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:inputType="datetime"
            android:textColorHint="#BAC7D4"
            android:hint="02/04/2024"
            android:gravity="center|start"
            android:textSize="14dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/joannab"
            android:text="Write Your Problem:"
            android:textColor="#000000"
            android:textSize="18dp">


        </TextView>

        <EditText
            android:id="@+id/pproblem"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:textColor="#000000"
            android:background="@drawable/et_input"
            android:paddingStart="10dp"
            android:textColorHint="#BAC7D4"
            android:textSize="14dp">

        </EditText>




        <Button
            android:id="@+id/book_now"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_curves"
            android:fontFamily="@font/joannab"
            android:hint="Book"
            android:textColorHint="#ffffff"
            android:textSize="18dp">

        </Button>


    </LinearLayout>



    </ScrollView>
</LinearLayout>