<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.patient_appointment_hostory"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="30dp"
                    android:fontFamily="@font/joannab"
                    android:layout_marginTop="28dp">


                </TextView>

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, 28 February, 2024 "
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp">



                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="112dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="10dp">


                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/logo">


                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/joannab"
                            android:text="Dr Name"
                            android:textColor="#000000"
                            android:textSize="22dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/jonalight"
                            android:text="Patient Name"
                            android:textColor="#000000"
                            android:textSize="15dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/jonalight"
                            android:text="Date"
                            android:textColor="#000000"
                            android:textSize="15dp" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </ScrollView>







        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/hii_top"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="btn_home"
                    android:src="@drawable/home"></ImageView>

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="btn_appointment"
                    android:src="@drawable/appointment"></ImageView>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/option"></ImageView>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="btn_profile"
                    android:src="@drawable/profile"></ImageView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</LinearLayout>