<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.Profile"
    android:background="#ffffff">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/joannab"
                android:layout_marginLeft="160dp"
                android:textColor="#000000"
                android:text="Profile"
                android:textSize="25dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="112dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/person">


                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/joannab"
                    android:text="User"
                    android:textColor="#000000"
                    android:textSize="22dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_detail"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="53dp"
                    android:fontFamily="@font/jonalight"
                    android:text="email"
                    android:textColor="#000000"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:id="@+id/greetingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="120dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/jonalight"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:text="Good Morning/Afternoon/Evening" />



            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp"
                android:onClick="contact"
                android:layout_marginTop="10dp"
                android:elevation="15dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/hii_top"
                    android:src="@drawable/contact_icon">


                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:fontFamily="@font/jonalight"
                    android:layout_marginTop="13dp"
                    android:text="Contact Us"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="310dp"
                    android:src="@drawable/arrow_right">


                </ImageView>



            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp"
                android:onClick="help"
                android:layout_marginTop="10dp"
                android:elevation="15dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/hii_top"
                    android:src="@drawable/help_icon">


                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:fontFamily="@font/jonalight"
                    android:layout_marginTop="13dp"
                    android:text="Help"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="310dp"
                    android:src="@drawable/arrow_right">


                </ImageView>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="350dp"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:elevation="15dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/hii_top"
                    android:src="@drawable/logout_icon">


                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:fontFamily="@font/jonalight"
                    android:layout_marginTop="13dp"
                    android:text="Logout"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="310dp"
                    android:src="@drawable/arrow_right">


                </ImageView>



            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="249dp">


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/hii_top"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="btn_home"
                    android:src="@drawable/home"
                    tools:ignore="UsingOnClickInXml" />

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="btn_appointment"
                    android:src="@drawable/appointment"></ImageView>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="45dp"
                    android:id="@+id/doc_btn"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/option">

                </ImageView>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="btn_profile"
                    android:src="@drawable/profile"></ImageView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>




</LinearLayout>